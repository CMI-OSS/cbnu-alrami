{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@emotion/babel-plugin": "^11.3.0",
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.1",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-loader": "^8.2.3",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.5.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "4",
    "lerna": "^4.0.0",
    "prettier": "^2.4.1",
    "prettier-eslint-cli": "^5.0.1",
    "react-hot-loader": "^4.13.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.2",
    "webpack": "^5.65.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.6.0"
  },
  "scripts": {
    "preinstall": "yarn convert",
    "start:admin": "lerna run --scope admin start",
    "dev:admin": "lerna run --scope admin dev --stream",
    "build:admin": "lerna run --scope admin build",
    "analyze:admin": "lerna run --scope admin analyze",
    "start:mobile": "lerna run --scope mobile start",
    "dev:mobile": "lerna run --scope mobile dev --stream",
    "build:mobile": "lerna run --scope mobile build --stream",
    "analyze:mobile": "lerna run --scope mobile analyze",
    "start:scraper": "lerna run --scope scraper start",
    "dev:scraper": "lerna run --scope scraper dev --stream",
    "start:server": "lerna run --scope server start",
    "dev:server": "lerna run --scope server dev --stream",
    "lint": "yarn eslint .",
    "lint:fix": "yarn eslint --fix .",
    "format": "yarn prettier-eslint --write \"**/*.js\" \"**/*.ts\" \"**/*.jsx\" \"**/*.tsx\" --ignore-path .gitignore",
    "convert": "lerna link convert",
    "bootstrap": "lerna bootstrap"
  },
  "dependencies": {
    "admin": "file:packages\\admin",
    "mobile": "file:packages\\mobile",
    "scraper": "file:packages\\scraper"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}
